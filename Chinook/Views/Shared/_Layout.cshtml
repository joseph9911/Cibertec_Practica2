<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Aplicación HTML5</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("2da Práctica Calificada", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <nav class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Artista", "Index", "Artist")</li>
                        <li>@Html.ActionLink("Album", "Index", "Album")</li>
                        <li>@Html.ActionLink("Cliente", "Index", "Customer")</li>
                        <li>@Html.ActionLink("Empleado", "Index", "Employee")</li>
                        <li>@Html.ActionLink("Genero", "Index", "Genre")</li>
                        <li>@Html.ActionLink("Invoice", "Index", "Invoice")</li>
                        <li>@Html.ActionLink("Linea Invoice", "Index", "InvoiceLine")</li>
                        <li>@Html.ActionLink("Tipo de Medio", "Index", "MediaType")</li>
                        <li>@Html.ActionLink("Lista Reproducción", "Index", "PlayList")</li>
                        <li>@Html.ActionLink("Pista", "Index", "Track")</li>
                    </ul>
                </nav>
            </div>
        </div>

    </header>
    <section class="container body-content">
        @RenderBody()
    </section>
    @*<footer>
            &copy; @DateTime.Now.Year - Todos los derechos reservados al autor.
        </footer>*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
